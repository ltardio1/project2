<!DOCTYPE html>
<html>
<head>
	<meta charset="utf-8">
	<title>Landing Page</title>
	<link rel="stylesheet" type="text/css" href="/css/blog.css">
</head>
<body>

<div id="container">

<div id="sub-container">


	<main>		
		<div id="select-container">								
			<!-- <div id="inner-select-container"> -->
				<!-- text on top of the drop down menu -->
				<p id="choose">Select A User</p>
				<!-- drop down menu to select a user's profile -->
				<select id="dropdown" onChange="document.location = this.value">			
					
					<option value=""/>-------</option>
						
					<% for (var i=0; i < users.length; i ++) { %>
						
					<option value="/users/<%= users[i].id %>">
						<%= users[i].username %>
					</option>

					<% } %>	

				</select>	
				
			<!-- </div> -->
			<!-- end inner-select-container -->
		</div>
		<!-- end select-container -->



		<% if(login) { %>

<!-- 
		<div id="entries-link-container-">
			


		</div> -->
<% } %>






			<!-- if statement / argument regarding what happens if user is not already logged in -->

			<% if(!login) { %>

				<!-- <div id="loginOrSignupMessage"> -->

					<!-- if not logged in, this message appears -->
					<!-- <h4 id="message-text">Please Sign up if new user or Login if already registered</h4>

				</div> -->

			<% } %>

			<!-- SIGN UP if you have not already / are not yet saved in the DB -->
			<% if(!login) { %>


			<div id="signup-form-container">

				<h3 id="signup-label">Sign up</h3>


				<!-- sends SIGN UP request to users POST route which redirects to users new show page after submitting form -->
				<form action="/users" method="POST">
					
					<input type="text" name="username" placeholder="username" />

					<input type="text" name="email" placeholder="email" />

					<input type="text" name="password" placeholder="password" />

					<button>submit</button>

				</form>

			</div>


				










			<div id="login-form-container">

				<!-- or login if you are an existing user / saved in DB -->
				<h3 id="login-label">Log in</h3>

				<!-- sends LOGIN request to users LOGIN POST route which redirects to users existing show page after submitting form -->
				<form action="/users/login" method="POST">
					
					<input type="text" name="email" placeholder="email" />

					<input type="text" name="password" placeholder="password" />

					<!-- <button>submit</button> -->
					<input type="submit" />
				</form>

			</div>


				



			<% } else { %>

			<div id="logout-container">

				<a href="/users/logout"><p class="logoutText">Logout</p></a>

			</div>


			<% } %>






	</main>

	</div>
		<!-- end sub-container -->

</div>
	<!-- close page container -->




</body>
</html>














